extends ../../layouts/account

block head
  title Welcome, 

block neck
  link(rel='stylesheet', href='/views/account/index.min.css?#{cacheBreaker}')

block feet
  script(src='/views/account/index.min.js?#{cacheBreaker}')

block body
  div.row
    div.col-sm-6
      div.page-header
        h1 Welcome, #{event.username}
        p #{event.accountType}
        - var language = event.accountType
        if language == "client"
            p Awesome
        else
            p Not awesome