extends ../../layouts/default

block head
  title Bid Post

block body
  div.row
    div.col-sm-12
      div.page-header
        h1 Bid for Job
        form(method='post', action='/jobs/bids')
          div.form-group
            label Posted By:
            | #{event._id}
          div.form-group
            label Anwsers:
            textarea.form-control(type='text', name='date' value="#{moment().subtract(10, 'days').calendar()}" readonly)
          div.form-group
            label Posted By:
            | #{event.username}
          div.form-group
            label Anwsers:
            textarea.form-control(type='text', name='anwsers' value='')
          div.form-group
            label Date:
            input.form-control(type='text', name='date' value="#{moment().subtract(10, 'days').calendar()}" readonly)
          div.form-group
            label Percentage Salary:
            input.form-control(type='text', name='percentSalary' value='')
          div.form-group
            label percentage Fee:
            input.form-control(type='text', name='percentFee' value='')
          div.form-group
            label Total:
            input.form-control(type='text', name='total' value='')
          div.form-group
            button.btn.btn-primary.btn-signup(type='submit') Bid Job
